            <button class="nav-card">
                <h1 class="nav-card-title">Modify Income Streams</h1>
                <img class="nav-card-icon" src="../../resources/banking-icons/income-icon.jpg"/>
            </button>
            <button class="nav-card">
                <h1 class="nav-card-title">Modify Expenses</h1>
                <img class="nav-card-icon" src="../../resources/banking-icons/expense-icon.jpg"/>
            </button>
            <button class="nav-card">
                <h1 class="nav-card-title">View Account Balance</h1>
                <img class="nav-card-icon" src="../../resources/banking-icons/balance-icon.jpg"/>
            </button>

        </div> -->
                <!--<img class="user-button-img" src="" alt="">-->

    </section>

    <script>

        const incomesButton = document.getElementById("incomesButton");
        const expensesButton = document.getElementById("expensesButton");
        const balanceButton = document.getElementById("balanceButton");

        incomesButton.addEventListener("click", () => location.replace("/users/0001/incomes"));
        expensesButton.addEventListener("click", () => location.replace("/users/0001/expenses"));
        balanceButton.addEventListener("click", () => location.replace("/users/0001/balances"));

    </script>

</body>
</html>