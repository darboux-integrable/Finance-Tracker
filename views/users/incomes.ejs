<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Incomes</title>
    <link type="text/css" rel="stylesheet" href="../../css/nav.css">
    <link type="text/css" rel="stylesheet" href="../../css/incomes.css">
    <link href="https://unpkg.com/tabulator-tables@6.2.5/dist/css/tabulator.min.css" rel="stylesheet">
    <script type="text/javascript" src="https://unpkg.com/tabulator-tables@6.2.5/dist/js/tabulator.min.js"></script>
    <script type="module" src="../../js/incomesTable.js" defer></script>
</head>
<body>
    <nav class="nav-bar">
        <div class="nav-logo-container">
            <img src="../../resources/Icon.svg" alt="Website Icon" class="logo-img">
            <h1 class="nav-title">Wallet Watcher</h1>
        </div>
        <div class="nav-buttons">
            <button class="nav-button nav-user-btn" id="loginButton">Log Out</button>
            <button class="theme-changer" id="themeBtn">
                <img src="../../resources/ionicons/sunny.svg" id="changeIcon" data-theme="sunny" alt="☀️" class="change-icon"/>
            </button>
        </div>
    </nav>

    <h1 class="incomes-title">Enter Various Income Sources</h1>

    <div class="incomes-wrapper">
        <div class="create-income-container">
            <h1 class="inputs-title">Data Input</h1>

            <div class="incomes-input-container">
                <div class="data-collector-labels">
                    <label class="data-collector-name" for="recurringIncomeLabelInput">Label: </label>
                    <label class="data-collector-name" for="recurringIncomeTimeInput">Recurring Times:</label>
                    <label class="data-collector-name" for="incomeAmountInput">Amount: $</label>
                </div>

                <div class="data-collector-inputs">
                    <input id="recurringIncomeLabelInput" type="text" placeholder="Enter a label..."/>

                    <select id="recurringIncomeTimeInput">
                        <option value="annual">Annually</option>
                        <option value="biannual">Biannually</option>
                        <option value="quarter">Quarterly</option>
                        <option value="month">Monthly</option>
                        <option value="biweek">Biweekly</option>
                        <option value="week">Weekly</option>
                        <option value="day">Daily</option>
                        <option value="oneTime">One Time</option>
                    </select>

                    <input id="incomeAmountInput" type="number" step="0.01" min="0.01" max="2000000000" placeholder="Enter amount..."/>
                </div>
            </div>
            <div class="data-buttons">
                <button class="add-to-table-button">Add To Table</button>
                <button class="clear-data-button">Delete Data</button>
            </div>
        </div>

        <div class="display-income-container">

            <div id="incomeDisplayTable"></div>
        </div>

    </div>


</body>
</html>