<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Incomes</title>
    <link type="text/css" rel="stylesheet" href="../../css/nav.css">
    <link type="text/css" rel="stylesheet" href="../../css/incomes.css">
    <script type="module" src="../../js/incomesTable.js" defer></script>
</head>
<body>
    <nav class="nav-bar">
        <div class="nav-logo-container">
            <img src="../../resources/Icon.svg" alt="Website Icon" class="logo-img">
            <h1 class="nav-title">Wallet Watcher</h1>
        </div>
        <div class="nav-buttons">
            <button class="nav-button nav-user-btn" id="loginButton">Log Out</button>
            <button class="theme-changer" id="themeBtn">
                <img src="../../resources/ionicons/sunny.svg" id="changeIcon" data-theme="sunny" alt="☀️" class="change-icon"/>
            </button>
        </div>
    </nav>

    <h1 class="incomes-title">Enter Various Income Sources</h1>

    <div class="incomes-wrapper">
        <div class="create-income-container">
            <h1 class="inputs-title">Incomes Input</h1>

            <form class="incomes-input-container" id="incomeInputForm">
                <div class="data-collector-labels">
                    <label class="data-collector-name" for="recurringIncomeLabelInput">Label: </label>
                    <label class="data-collector-name" for="recurringIncomeTimeInput">Recurring Times:</label>
                    <label class="data-collector-name" for="incomeAmountInput">Amount: $</label>
                </div>

                <div class="data-collector-inputs">
                    <input id="incomeLabelInput" type="text" placeholder="Enter a label..." required/>

                    <select class="incomeTypeInputDropdown" id="incomeTypeInput" required>
                        <option value="Annually">Annually</option>
                        <option value="Biannually">Biannually</option>
                        <option value="Quarterly">Quarterly</option>
                        <option value="Monthly">Monthly</option>
                        <option value="Biweekly">Biweekly</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Daily">Daily</option>
                        <option value="Onetime">Onetime</option>
                    </select>

                    <input id="incomeAmountInput" type="number" step="0.01" min="0.01" max="1000000000" placeholder="Enter an amount..." required/>
                </div>

                <div class="data-buttons">
                    <input type="submit" class="add-to-table-button" value="Add to Table"/>
                    <button class="clear-data-button">Delete Data</button>
                </div>
            </form>

        </div>

        <div class="display-income-container">


                <div class="incomeDisplayTable">

                    <div class="column-labels">
                        <div class="grid-item">Type</div>
                        <div class="grid-item">Label</div>
                        <div class="grid-item">Amount</div>
                    </div>

                    <!--Holds grid elements, each grid inside is a separate row -->
                    <div id="tableRowsWrapper" class="table-rows-wrapper"></div>
                </div>

        </div>

    </div>


</body>
</html>